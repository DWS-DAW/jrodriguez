{# app/Resources/views/T5b/T5b_all_prod_by_cat.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}T5b Visualización de lista de productos{% endblock %}</title>
       	{% block stylesheets %}
       		<link href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css') }}" type="text/css" rel="stylesheet" />
       		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
		{% endblock %}
    </head>
    <body>
        {% block body %}
         {% for cat in listado_categorias %}
              <h4>{{ cat }}</h4>
              <table>
              {% for product in cat.products %} {# esto lo que consigue es otra SELECT por parte del symfony de todos los productos de la cat que estamos tratando el el 1er bucle #}
              <tr>           	
              	<td><a href="{{ path('reg_identificador', {'id':product.id}) }}">{{ product.id }}</a></td><td>{{ product.name }}</td><td>{{ product.price }}</td><td>{{ product.description }}</td><td><a href="{{ path('reg_borraById', {'id':product.id}) }}"> Borra el art: {{ product.id }}</a></td>
              </tr>
              {% endfor %}
              </table>
         {% endfor %}
		{% endblock %}	
    </body>    
</html>

