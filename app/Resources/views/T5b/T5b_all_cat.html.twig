{# app/Resources/views/T5b/T5b_all_cat.html.twig #}
        {% extends '::base.html.twig' %}
        {% block title %}<title>T5b Visualización de lista de categorias</title>{% endblock %}

        {% block content %}
           <h3>Las categorias son:</h3>
           <hr>
           <table border="1">
             <tr>
               <th>Id</th>
               <th>Nombre</th>
               {% if is_granted('ROLE_APP_ADMIN') %}
	                 <th>Eliminacion</th>
               {% endif %} 
              </tr>
              {% for cat in listado_categorias %}
              <tr>
                 <td>{{ cat.getId() }}</td>
                 <td>{{ cat.getName() }}</td>
                 {# Condiciono el enlace al borrado al ROLE_APP_ADMIN #}
                 {% if is_granted('ROLE_APP_ADMIN') %} 
	                 <td><a href="{{ path('cat_borra', {'id':cat.id}) }}"><i class="fa fa-trash"></i></a></td>
                 {% endif %} 
              </tr>
              {% endfor %}
              <hr>
		{% endblock %}	
  